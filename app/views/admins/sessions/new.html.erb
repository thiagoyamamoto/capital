<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Entre</h3>
            </div>
            <div class="panel-body">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-group">
                            <%= f.email_field :email, class: "form-control", placeholder: "E-mail", type:"email", autofocus: "autofocus" %>
                        </div>
                        <div class="form-group">
                            <%= f.password_field :password, class: "form-control", placeholder: "Password", value: "", autocomplete: "off" %>
                        </div>
                        <div class="checkbox">
                            <label>
                                <%= f.check_box :remember_me %> Mantenha conectado
                            </label>
                        </div>
                        <%= f.submit "Entre", class: "btn btn-lg btn-success btn-block" %>
                  <% end %>
            </div>
        </div>
    </div>
</div>

<% flash.each do |key, m| %>
    <script>
        $.notify("<%= m %>", {class: "danger"})
    </script>
<% end %>