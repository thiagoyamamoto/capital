<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= action %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<% if @testimonial.errors.any? %>
    <div class="alert alert-danger">
        <% @testimonial.errors.full_messages.each do |error| %>
            <div>
                <%= error %>
            </div>
        <% end %>
    </div>
<% end %>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Preencha as Informações</h4>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-6">
                    <%= form_for([:backoffice, @testimonial]) do |f| %>
                        <div class="form-group">           
                            <label for="name">Nome da pessoa</label>                 
                            <%= f.text_field :name, class:"form-control", placeholder: "Digite o nome" %>
                        </div>
                        <div class="form-group">
                            <label for="company">Empresa</label>
                            <%= f.text_field :company, class:"form-control", placeholder: "Digite o nome da empresa" %>
                        </div>
                        <div class="form-group">
                            <label for="depoimento">Depoimento</label>
                            <%= f.text_area :message, class:"form-control", placeholder: "Digite o depoimento", rows: 10 %>
                        </div>
                        <div class="form-group">
                            <%= f.submit "Salvar", class: "btn btn-success btn-lg" %>
                            <%= link_to "Cancelar", backoffice_testimonials_path, class: "btn btn-default btn-lg" %>
                        </div>
                    <% end %>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>