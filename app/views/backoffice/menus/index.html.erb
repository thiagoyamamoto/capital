<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cardápios</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-8">   
                        <h4>Cardápios Cadastrados</h4>
                    </div>
                    <div class="col-md-4 text-right">
                        <%= link_to new_backoffice_menu_path, class: "btn btn-success", title: 'Cadastrar Cardápio' do %>
                            <i class="fa fa-plus"></i> Novo
                        <% end %>
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Serviço</th>
                            <th>Título</th>
                            <th>Descrição</th>                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    	<% @menus.each_with_index do |c,index| %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= c.service.title %></td>
                            <td><%= c.title %></td>                          
                            <td><%= c.description %></td>
                            <td width="140">
                                <%= link_to backoffice_menu_path(c), class: "btn btn-warning btn-sm", title: 'Detalhes' do %>
                                    <i class="fa fa-search"></i>
                                <% end %>  
                                <%= link_to edit_backoffice_menu_path(c), class: "btn btn-primary btn-sm", title: 'Editar' do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>        
                                <%= link_to backoffice_menu_path(c), method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "Você realmente deseja excluir cardápio?"}, title: 'Excluir' do %>
                                    <i class="fa fa-trash"></i>
                                <% end %>  
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>