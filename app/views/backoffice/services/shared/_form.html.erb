<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= action %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<% if @service.errors.any? %>
    <div class="alert alert-danger">
        <% @service.errors.full_messages.each do |error| %>
            <div>
                <%= error %>
            </div>
        <% end %>
    </div>
<% end %>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Preencha as Informações</h4>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-6">
                    <%= form_for([:backoffice, @service],  html: { multipart: true } ) do |f| %>
                        <div class="form-group">
                            <label for="titulo">Título</label>
                            <%= f.text_field :title, class:"form-control", placeholder: "Digite o título do serviço" %>
                        </div>
                        <div class="form-group">
                            <label for="descricao">Descrição</label>
                            <%= f.text_area :description, class:"form-control", placeholder: "Digite a descrição do serviço", rows: 10 %>
                        </div>
                        <div class="form-group">
                            <label for="slogan">Slogan</label>
                            <%= f.text_field :slogan, class:"form-control", placeholder: "Digite o slogan" %>
                        </div>
                        <div class="form-group">
                            <%= image_tag @service.picture(:medium), class: 'img-thumbnail' %>
                            <%= f.file_field :picture %>
                        </div>
                        <div class="form-group">
                            <label for="categoria">Categoria</label>
                            <%= f.collection_select :category_id, @categories, :id, :description, {}, { class: 'form-control' } %>
                        </div>                   
                        <div class="form-group">
                            <%= f.submit "Salvar", class: "btn btn-success btn-lg" %>
                            <%= link_to "Cancelar", backoffice_services_path, class: "btn btn-default btn-lg" %>
                        </div>
                    <% end %>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>